package com.formatlos.as3.lib.text.highlight.style {	import flash.display.Sprite;	import flash.geom.Rectangle;	/**	 * @author Martin Raedlinger (mr@formatlos.de)	 */	public class SimpleHighlightStyle implements IHighlightStyle 	{		private var _color : uint;		private var _alpha : Number;				/**		 * SimpleHighlightStyle just uses a colored Rectangle as highlight		 * 		 * @param color_ color of the highlight		 * @param alpha_ alpha of the highlight		 */		public function SimpleHighlightStyle(color_ : uint = 0xed5813, alpha_ : Number = .8)		{			_color = color_;			_alpha = alpha_;		}		public function create(target_ : Sprite, rect_ : Rectangle) : void		{			if(!target_ || !rect_) return;						target_.graphics.beginFill(_color, _alpha);			target_.graphics.drawRect(rect_.x, rect_.y, rect_.width, rect_.height);			target_.graphics.endFill();		}				public function clear(target_ : Sprite) : void		{			if(!target_) return;			target_.graphics.clear();		}	}}